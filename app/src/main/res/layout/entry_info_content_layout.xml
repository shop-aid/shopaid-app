<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    android:orientation="vertical"
    android:paddingBottom="16dp">
    
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_entry_info_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text_entry_info_header"
            android:textColor="@color/white"
            android:textSize="@dimen/text_gigantic" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text_entry_info_subheader"
            android:textColor="@color/white"
            android:textSize="@dimen/text_gigantic" />

    </LinearLayout>
    


    <TextView
        android:id="@+id/entryInfoView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/text_entry_info"
        android:textColor="@color/white"
        android:textSize="@dimen/text_normal" />

</LinearLayout>