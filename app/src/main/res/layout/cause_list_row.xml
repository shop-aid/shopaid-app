<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/cause_image"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/item_image_height"
                        android:scaleType="centerCrop" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="@dimen/spacing_normal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/cause_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@android:color/black"
                                android:textSize="@dimen/text_big" />

                            <TextView
                                android:id="@+id/cause_sub_text"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />

                        </LinearLayout>

                        <ImageView
                            android:id="@+id/cause_logo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/spacing_normal"
                            android:layout_marginStart="@dimen/spacing_normal"
                            android:scaleType="centerInside" />

                    </LinearLayout>

                </LinearLayout>

                <ImageView
                    android:id="@+id/select_item_view"
                    android:layout_width="@dimen/item_selector_dimen"
                    android:layout_height="@dimen/item_selector_dimen"
                    android:layout_gravity="center|bottom"
                    android:layout_marginBottom="68dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/icon_checkmark_unselected" />

            </FrameLayout>

            <TextView
                android:id="@+id/cause_item_description_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/spacing_normal"
                android:textSize="18sp"/>

            <ImageView
                android:id="@+id/cause_details_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/light_blue"
                android:padding="@dimen/spacing_normal" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>